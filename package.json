{
  "name": "@u3u/tailwind-config",
  "version": "2.0.0",
  "description": "âš¡ The most perfect TailwindCSS presets",
  "keywords": [
    "tailwindcss config",
    "tailwindcss presets"
  ],
  "repository": {
    "url": "https://github.com/u3u/tailwind-config.git"
  },
  "license": "MIT",
  "author": "u3u <qwq@qwq.cat> (https://github.com/u3u)",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && fix-tsup-cjs",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "prepare": "pnpm build",
    "test": "vitest --ui --coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,tsx,md}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@ant-design/colors": "^7.0.0",
    "@egoist/tailwindcss-icons": "^1.4.0",
    "@iconify/tools": "^3.0.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "daisyui": "^4.4.19",
    "deepmerge": "^4.3.1",
    "remeda": "^1.29.0",
    "tailwindcss-animated": "^1.0.1"
  },
  "devDependencies": {
    "@nextui-org/react": "^2.2.9",
    "@total-typescript/ts-reset": "^0.5.1",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.10.4",
    "@u3u/eslint-config": "^2.14.1",
    "@u3u/prettier-config": "^4.1.4",
    "@u3u/tailwind-config": "link:",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.7",
    "bumpp": "^9.2.0",
    "dedent": "^1.5.1",
    "eslint": "^8.55.0",
    "execa": "^8.0.1",
    "fix-tsup-cjs": "^1.2.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "@iconify/json": ">=2.2.0",
    "@nextui-org/react": ">=2.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@iconify/json": {
      "optional": true
    },
    "@nextui-org/react": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.12.0",
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "@types/node"
      ]
    },
    "patchedDependencies": {
      "@ant-design/colors@7.0.0": "patches/@ant-design__colors@7.0.0.patch"
    }
  }
}
